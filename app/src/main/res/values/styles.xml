<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>


    <!-- 画面タイトル -->
    <style name="titleLabel">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">22dp</item>
    </style>

    <!-- フィールドラベル -->
    <style name="fieldLabel">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- テキストフィールド -->
    <style name="textField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/text_field</item>
    </style>

    <!-- パスワードフィールド -->
    <style name="passwordField" parent="textField">
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- チェックボックス: android:theme で指定する -->
    <style name="erikuraCheckbox">
        <item name="android:colorControlNormal">@color/colorGray</item>
        <item name="android:colorControlActivated">@color/colorLightBlueGreen</item>
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <!-- プライマリボタン -->
    <style name="primaryButton">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- セカンダリボタン -->
    <style name="secondaryButton">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
