<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:fontFamily">@font/hirakakupron_w2_alphanum_01</item>

    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>


    <!-- 画面タイトル -->
    <style name="titleLabel">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/blackTwo</item>
        <item name="android:textSize">22dp</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <style name="linkText">
        <item name="android:fontFamily">@font/hirakakupron_w6_alphanbum_01</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/topaz</item>
        <item name="android:textColorLink">@color/topaz</item>
    </style>

    <style name="smallCaption">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/blackTwo</item>
        <item name="android:textSize">12dp</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <!-- フィールドラベル -->
    <style name="fieldLabel">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/blackTwo</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- テキストフィールド -->
    <style name="textField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/text_field</item>
    </style>

    <!-- パスワードフィールド -->
    <style name="passwordField" parent="textField">
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- セレクトボックス -->
    <style name="selectField" parent="textField">
        <item name="android:drawableRight">@drawable/arrow_under</item>
        <item name="android:drawablePadding">22dp</item>
        <item name="android:clickable">true</item>
        <item name="android:editable">false</item>
    </style>

    <!-- スピナー -->
    <style name="spinnerField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/spinner_field</item>
    </style>

    <!-- エラーフィールド -->
    <style name="errorField">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">#fff1f1</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- チェックボックス: android:theme で指定する -->
    <style name="erikuraCheckbox">
<!--        <item name="android:colorControlNormal">@color/colorGray</item>-->
<!--        <item name="android:colorControlActivated">@color/colorLightBlueGreen</item>-->
<!--        <item name="android:colorBackground">@color/colorWhite</item>-->
        <item name="android:button">@drawable/erikura_checkbox</item>
    </style>

    <!-- プライマリボタン -->
    <style name="primaryButton">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">@color/primary_button_text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/hirakakupron_w6_alphanbum_01</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- セカンダリボタン -->
    <style name="secondaryButton">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:textColor">@color/secondary_button_text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/hirakakupron_w6_alphanbum_01</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ターシャリーボタン -->
    <style name="tertiaryButton">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/tertiary_button</item>
        <item name="android:textColor">@color/tertiary_button_text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/hirakakupron_w6_alphanbum_01</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- チェックボックス付きボタン -->
    <style name="buttonWithCheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/button_with_checkbox</item>
        <item name="android:textColor">@color/blackTwo</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:button">@drawable/erikura_checkbox_in_button</item>
    </style>

    <!-- 次へボタン -->
    <style name="nextButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@drawable/next_button_text</item>
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">@font/hirakakupron_w6_alphanbum_01</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">次へ</item>
    </style>
</resources>
