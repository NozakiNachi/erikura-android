<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:fontFamily">@font/hirakakupron_w2_alphanum_01</item>

        <item name="android:windowEnterTransition">@android:transition/slide_bottom</item>
<!--        <style name="Theme1" parent="Theme.AppCompat">-->
<!--            <item name="android:windowEnterTransition">@android:transition/slide_left</item>-->
<!--            <item name="android:windowExitTransition">@android:transition/slide_bottom</item>-->
<!--        </style>-->

    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>

    <style name="label">
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    <style name="label_w2" parent="label">
        <item name="android:fontFamily">@font/hirakakupron_w2_alphanum_01</item>
    </style>
    <style name="label_w6" parent="label">
        <item name="android:fontFamily">@font/hirakakupron_w6_alphanbum_01</item>
    </style>


    <!-- 画面タイトル -->
    <style name="titleLabel">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/blackTwo</item>
        <item name="android:textSize">22dp</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <style name="linkText">
        <item name="android:fontFamily">@font/hirakakupron_w6_alphanbum_01</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/topaz</item>
        <item name="android:textColorLink">@color/topaz</item>
    </style>

    <style name="smallCaption">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/blackTwo</item>
        <item name="android:textSize">12dp</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <!-- フィールドラベル -->
    <style name="fieldLabel">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/blackTwo</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- テキストフィールド -->
    <style name="textField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/text_field</item>
    </style>

    <style name="textField_noborder" parent="textField">
        <item name="android:background">@drawable/text_field_noborder</item>
    </style>

    <!-- パスワードフィールド -->
    <style name="passwordField" parent="textField">
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- セレクトボックス -->
    <style name="selectField" parent="textField">
        <item name="android:drawableRight">@drawable/arrow_under</item>
        <item name="android:drawablePadding">22dp</item>
        <item name="android:clickable">true</item>
        <item name="android:editable">false</item>
    </style>

    <!-- スピナー -->
    <style name="spinnerField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/spinner_field</item>
    </style>

    <!-- エラーフィールド -->
    <style name="errorField">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">#fff1f1</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- チェックボックス: android:theme で指定する -->
    <style name="erikuraCheckbox">
<!--        <item name="android:colorControlNormal">@color/colorGray</item>-->
<!--        <item name="android:colorControlActivated">@color/colorLightBlueGreen</item>-->
<!--        <item name="android:colorBackground">@color/colorWhite</item>-->
        <item name="android:button">@drawable/erikura_checkbox</item>
    </style>

    <!-- プライマリボタン -->
    <style name="primaryButton">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">@color/primary_button_text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/hirakakupron_w6_alphanbum_01</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/default_elevation</item>
    </style>

    <!-- セカンダリボタン -->
    <style name="secondaryButton">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:textColor">@color/secondary_button_text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/hirakakupron_w6_alphanbum_01</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/default_elevation</item>
    </style>

    <!-- ターシャリーボタン -->
    <style name="tertiaryButton">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/tertiary_button</item>
        <item name="android:textColor">@color/tertiary_button_text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/hirakakupron_w6_alphanbum_01</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/default_elevation</item>
    </style>

    <!-- 地図アプリを開くボタン -->
    <style name="openMapButton">
        <item name="android:background">@drawable/tertiary_button</item>
        <item name="android:textColor">@color/tertiary_button_text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/hirakakupron_w6_alphanbum_01</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/default_elevation</item>
    </style>

    <!-- チェックボックス付きボタン -->
    <style name="buttonWithCheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/button_with_checkbox</item>
        <item name="android:textColor">@color/blackTwo</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:button">@drawable/erikura_checkbox_in_button</item>
    </style>

    <!-- 次へボタン -->
    <style name="nextButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@drawable/next_button_text</item>
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">@font/hirakakupron_w6_alphanbum_01</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">次へ</item>
    </style>

    <!-- お気に入りボタン -->
    <style name="favoriteButton">
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:background">@drawable/favorite_button</item>
    </style>

    <!-- goodボタン -->
    <style name="goodButton">
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:background">@drawable/good_button</item>
    </style>

    <!-- badボタン -->
    <style name="badButton">
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:background">@drawable/bad_button</item>
    </style>

    <!-- 履歴ポップアップ -->
    <style name="historyPopupListViewStyle">
        <item name="android:divider">@color/silver</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="bottomNavigationItemText">
        <item name="android:fontFamily">@font/hirakakupron_w6_alphanbum_01</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="owned_jobs_tab_layout" parent="Widget.Design.TabLayout">
    </style>
    <style name="owned_jobs_tab_text_appearance" parent="label_w2">
        <item name="android:fontFamily">@font/hirakakupron_w2_alphanum_01</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/blackTwo</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <!-- 作業報告写真選択 -->
    <style name="imagePickerTick">
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:background">@drawable/background_tick_button</item>
    </style>
</resources>
