<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.activities.ConfigurationViewModel" />
        <variable
            name="handlers"
            type="jp.co.recruit.erikura.presenters.activities.ConfigurationEventHandlers" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ログアウトしますか？"
            style="@style/label_w2"
            android:textSize="22dp"
            android:gravity="center_horizontal"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            style="@style/primaryButton"
            android:text="ログアウト"
            android:onClick="@{handlers::onClickLogout}"
            />
    </LinearLayout>
</layout>