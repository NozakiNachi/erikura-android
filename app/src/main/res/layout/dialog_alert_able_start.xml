<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.fragments.AppliedJobDetailsFragmentViewModel" />
        <variable
            name="handlers"
            type="jp.co.recruit.erikura.presenters.fragments.AppliedJobDetailsFragmentEventHandlers" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/titleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/job_alert"
                android:textColor="@color/black" />

            <TextView
                style="@style/errorField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/coral"
                android:lineSpacingExtra="10dp"
                android:text="@{viewModel.message}"/>

<!--            <Button-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="70dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_marginLeft="0dp"-->
<!--                android:layout_marginRight="0dp"-->
<!--                style="@style/primaryButton"-->
<!--                android:text="@string/confirmation"-->
<!--                app:onSafeClick="@{handlers::onClickConfirmation}" />-->

        </LinearLayout>
    </ScrollView>
</layout>