<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.activities.report.SummaryRemoveViewModel" />
        <variable
            name="handlers"
            type="jp.co.recruit.erikura.presenters.activities.report.SummaryRemoveEventHandlers" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{viewModel.msg}"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                style="@style/primaryButton"
                android:text="@string/remove"
                android:onClick="@{handlers::onClickRemoveButton}"
                />

        </LinearLayout>
    </ScrollView>
</layout>