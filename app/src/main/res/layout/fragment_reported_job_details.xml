<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.fragments.ReportedJobDetailsFragmentViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presenters.fragments.ReportedJobDetailsFragment">

        <!-- TODO: Update blank fragment layout -->
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 背景ブラー画像 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@{viewModel.bitmapDrawable}"
                    android:orientation="vertical">

                    <!-- 時間表示ラベル -->
                    <FrameLayout
                        android:id="@+id/jobDetails_timeLabelFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/background_carousel_knob" />

                    <!-- 簡易表示 -->
                    <FrameLayout
                        android:id="@+id/jobDetails_jobInfoViewFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/job_info_view_body" />

                    <!-- サムネイル画像 -->
                    <FrameLayout
                        android:id="@+id/jobDetails_thumbnailImageFragment"
                        android:layout_width="251dp"
                        android:layout_height="188dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/background_triangle_reverse"/>

                </LinearLayout>

                <!-- 作業報告ステータス -->
                <!--FIXME: Fragment未作成 ボタンはマニュアル表示ボタンをもとにする-->
                <FrameLayout
                    android:id="@+id/jobDetails_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp" />
                <!--作業報告を編集ボタン-->
                <FrameLayout
                    android:id="@+id/jobDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <!--作業報告を削除ボタン-->
                <FrameLayout
                    android:id="@+id/jobDetails_D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <!-- 案件詳細情報 -->
                <FrameLayout
                    android:id="@+id/jobDetails_jobDetailsViewFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />

                <!--実施箇所表示-->
                <!--リサイクルビューで表示-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ImplementedLocationList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    android:padding="20dp"
                    />

                <!--作業時間-->
                <FrameLayout
                    android:id="@+id/jobDetails_ww"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />
                <!--マニュアル外の報告-->
                <FrameLayout
                    android:id="@+id/jobDetails_w"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />

                <!-- マニュアル外の報告画像 -->
                <FrameLayout
                    android:id="@+id/jobDetails_thumbnailImage"
                    android:layout_width="180dp"
                    android:layout_height="305dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp" />

                <!--コメント-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:text="@string/comment" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="10dp"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        />
                    <!--                        android:text="@{viewModel.tool}"-->
                </LinearLayout>

                <!--運営からの評価-->
                <FrameLayout
                    android:id="@+id/jobDetails_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp" />

                <!-- ラベル -->
                <TextView
                    style="@style/titleLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/report_evaluation_caption" />

                <!--評価ボタン表示のみ-->
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:stateListAnimator="@drawable/button_state_list_anim_material_8dp"
                    style="@style/goodButton"/>
                <!--                    android:checked="@={viewModel.good}"-->

                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:stateListAnimator="@drawable/button_state_list_anim_material_8dp"
                    style="@style/badButton"/>
                <!--                    android:checked="@={viewModel.bad}"-->


                <!--コメント-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:text="@string/comment" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="10dp"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        />
                    <!--                        android:text="@{viewModel.tool}" -->

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</layout>