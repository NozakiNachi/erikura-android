<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.util.MessageUtils.MessageAlertViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/message_alert_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:fontFamily="@font/hirakakupron_w2_alphanum_01"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:firstBaselineToTopHeight="0dp"
            android:lastBaselineToBottomHeight="0dp"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="1.5"
            android:gravity="center_horizontal"
            android:text="@{viewModel.messages}"
            />
    </LinearLayout>
</layout>