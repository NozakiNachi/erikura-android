<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
        <data>
            <variable
                name="viewModel"
                type="jp.co.recruit.erikura.presenters.fragments.ReportedJobStatusFragmentViewModel" />
        </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presenters.fragments.ReportedJobStatusFragment">

        <!--作業報告のステータス-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_round_topaz" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="3"
                android:gravity="left"
                android:text="@string/report_status"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <!--差し戻し-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{viewModel.rejectedVisible}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/coral"
                    android:textSize="22dp"
                    android:text="差し戻し" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="18dp"
                    android:background="@color/silverTwo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/report_rejected_comment"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="@{viewModel.reportRejectComment}"/>

            </LinearLayout>
            <!--確認待ち-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{viewModel.unconfirmedVisible}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textColor="@color/warmGrey"
                    android:textSize="22dp"
                    android:text="確認待ち"/>
            </LinearLayout>
            <!--確認済み-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{viewModel.acceptedVisible}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textColor="@color/topaz"
                    android:textSize="22dp"
                    android:text="確認済み"/>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</layout>