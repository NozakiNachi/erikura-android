<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!--    <data>-->
    <!--        <variable-->
    <!--            name="viewModel"-->
    <!--            type="jp.co.recruit.erikura.presenters.fragments.ReportedJobStatusFragmentViewModel" />-->
    <!--        <variable-->
    <!--            name="handlers"-->
    <!--            type="jp.co.recruit.erikura.presenters.fragments.ReportedJobStatusFragmentEventHandlers" />-->
