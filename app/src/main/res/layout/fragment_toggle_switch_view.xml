<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="handlers"
            type="jp.co.recruit.erikura.presenters.fragments.ToggleSwitchHandlers" />
        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.fragments.ToggleSwitchViewModel" />
    </data>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_bg_gray" />
        <View
            android:id="@+id/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_bg_green" />
        <View
            android:id="@+id/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_bg_white" />
        <ToggleButton
            android:id="@+id/notification"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@drawable/toggle_btn"
            android:checked="@={viewModel.notification_boolean}"
            android:textOff=""
            android:textOn=""
            android:onClick="@{handlers::onClick}"
            />
    </FrameLayout>
</layout>
