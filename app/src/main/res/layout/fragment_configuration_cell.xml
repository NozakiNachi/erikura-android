<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.activities.ConfigurationMenuItemViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/label_w2"
            android:textSize="18dp"
            android:textColor="@color/blackTwo"
            android:drawableLeft="@{viewModel.item.iconDrawableId}"
            android:text="@{viewModel.item.label}" />
    </RelativeLayout>
</layout>
