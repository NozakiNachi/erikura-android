<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.activities.ConfigurationViewModel" />
        <variable
            name="handlers"
            type="jp.co.recruit.erikura.presenters.activities.ConfigurationEventHandlers" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editText"
                style="@style/titleLabel"
                android:layout_width="390dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10.5dp"
                android:layout_marginTop="10.5dp"
                android:layout_marginBottom="1.5dp"
                android:textColor="@color/blackTwo"
                android:textSize="20dp"
                android:text="設定" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/configuration_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
