<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.activities.ConfigurationViewModel" />
        <variable
            name="handlers"
            type="jp.co.recruit.erikura.presenters.activities.ConfigurationEventHandlers" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/white"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/editText"
                        style="@style/titleLabel"
                        android:layout_width="390dp"
                        android:layout_height="78dp"
                        android:layout_marginLeft="10.5dp"
                        android:layout_marginTop="10.5dp"
                        android:layout_marginBottom="1.5dp"
                        android:textColor="@color/blackTwo"
                        android:textSize="20dp"
                        android:text="設定" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="4.5dp"
                        android:layout_marginBottom="4.0dp"
                        android:src="@drawable/work_bg_2x" />
                    <TextView
                        android:layout_width="320dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4.5dp"
                        android:textSize="18dp"
                        android:onClick="@{handlers::onRegistrationLink}"
                        android:textColor="@color/blackTwo"
                        android:text="会員情報変更" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="4.5dp"
                        android:layout_marginBottom="4.0dp"
                        android:src="@drawable/work_bg_2x" />
                    <TextView
                        android:layout_width="320dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4.5dp"
                        android:textSize="18dp"
                        android:onClick="@{handlers::onAccountRegistration}"
                        android:textColor="@color/blackTwo"
                        android:text="口座情報登録・変更" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="4.5dp"
                        android:layout_marginBottom="4.0dp"
                        android:src="@drawable/work_bg_2x" />
                    <TextView
                        android:layout_width="320dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4.5dp"
                        android:textSize="18dp"
                        android:onClick="@{handlers::onNotificationSettings}"
                        android:textColor="@color/blackTwo"
                        android:text="通知設定" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="4.5dp"
                        android:layout_marginBottom="4.0dp"
                        android:src="@drawable/work_bg_2x" />
                    <TextView
                        android:layout_width="320dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4.5dp"
                        android:textSize="18dp"
                        android:onClick="@{handlers::onAboutTheApp}"
                        android:textColor="@color/blackTwo"
                        android:text="このアプリについて" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="4.5dp"
                        android:layout_marginBottom="4.0dp"
                        android:src="@drawable/work_bg_2x" />
                    <TextView
                        android:layout_width="320dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4.5dp"
                        android:textSize="18dp"
                        android:onClick="@{handlers::onFrequentQuestions}"
                        android:textColor="@color/blackTwo"
                        android:text="よくある質問" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="4.5dp"
                        android:layout_marginBottom="4.0dp"
                        android:src="@drawable/work_bg_2x" />
                    <TextView
                        android:layout_width="320dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4.5dp"
                        android:textSize="18dp"
                        android:onClick="@{handlers::onInquiry}"
                        android:textColor="@color/blackTwo"
                        android:text="問い合わせ" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="4.5dp"
                        android:layout_marginBottom="4.0dp"
                        android:src="@drawable/work_bg_2x" />
                    <TextView
                        android:layout_width="320dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4.5dp"
                        android:textSize="18dp"
                        android:onClick="@{handlers::onClickLogoutLink}"
                        android:textColor="@color/blackTwo"
                        android:text="ログアウト" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
