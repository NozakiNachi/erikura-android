<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.activities.mypage.ChangeUserInformationViewModel" />

        <variable
            name="handlers"
            type="jp.co.recruit.erikura.presenters.activities.mypage.ChangeUserInformationEventHandlers" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/change_user_information_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/label_w2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="20dp"
                        android:text="会員情報変更"
                        android:textColor="@color/black"
                        android:textSize="22dp" />
                </LinearLayout>

                <!--身分証未確認の場合表示-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/background_round_topaz"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="@{viewModel.unconfirmedVisibility}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/unconfirmed_identification_explain"
                        android:textColor="@color/coral"
                        android:textSize="22dp" />

                    <TextView
                        style="@style/label_w2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/recommend_identification"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <Button
                        style="@style/secondaryButton"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="0dp"
                        android:text="@string/confirm_identification"
                        app:onSafeClick="@{handlers.onClickUpdateIdentity}" />

                </LinearLayout>


                <!--ログインID(登録メールアドレスを表示する。)-->
                <TextView
                    style="@style/fieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:drawableLeft="@drawable/icon_required_18"
                    android:drawablePadding="10dp"
                    android:text="ログインID(メールアドレス)" />

                <TextView
                    android:id="@+id/register_mail_address"
                    style="@style/fieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.email}" />

                <!--パスワード-->
                <TextView
                    style="@style/fieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="パスワード" />

                <EditText
                    style="@style/passwordField"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:hint="@string/register_password_hint"
                    android:text="@={viewModel.password}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="※パスワードを変更する場合は入力してください。\n\n※6文字以上の半角英数で入力してください。 "
                    android:textColor="@color/blackTwo"
                    android:textSize="12dp" />

                <TextView
                    style="@style/errorField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@={viewModel.passwordError.message}"
                    android:visibility="@{viewModel.passwordError.visibility}" />

                <!--パスワード確認-->
                <TextView
                    style="@style/fieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="パスワード確認" />

                <EditText
                    style="@style/passwordField"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:hint="@string/register_password_hint"
                    android:text="@={viewModel.verificationPassword}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="※パスワードを変更する場合は入力してください。"
                    android:textColor="@color/blackTwo"
                    android:textSize="12dp" />

                <TextView
                    style="@style/errorField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@={viewModel.verificationPasswordError.message}"
                    android:visibility="@{viewModel.verificationPasswordError.visibility}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <!--氏名-->
                    <TextView
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="10dp"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="氏名（姓・名）" />

                    <!-- 身分証の確認状況を表示-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/unconfirmed_identification"
                        android:textColor="@color/coral"
                        android:textSize="12dp"
                        android:visibility="@{viewModel.unconfirmedExplainVisibility}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{viewModel.confirmingUserName}"
                        android:textColor="@color/coral"
                        android:textSize="12dp"
                        android:visibility="@{viewModel.confirmingVisibility}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/verified_1x"
                        android:text="@string/confirmed_identification"
                        android:textColor="@color/warmGrey"
                        android:textSize="12dp"
                        android:visibility="@{viewModel.confirmedVisibility}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{viewModel.deniedUserName}"
                        android:textColor="@color/coral"
                        android:textSize="12dp"
                        android:visibility="@{viewModel.deniedVisibility}" />

                    <TextView
                        style="@style/linkText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:textSize="12dp"
                        android:text="@string/change"
                        android:visibility="@{viewModel.changeVisibility}"
                        app:onSafeClick="@{handlers.onClickUpdateIdentityForChangeInfo}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/textField"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:enabled="@{viewModel.inputIdentityInfoEnabled}"
                        android:hint="@string/register_last_name_hint"
                        android:inputType="text"
                        android:text="@={viewModel.lastName}" />

                    <EditText
                        style="@style/textField"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:enabled="@{viewModel.inputIdentityInfoEnabled}"
                        android:hint="@string/register_first_name_hint"
                        android:inputType="text"
                        android:text="@={viewModel.firstName}" />
                </LinearLayout>

                <TextView
                    style="@style/errorField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@={viewModel.lastNameError.message}"
                    android:visibility="@{viewModel.lastNameError.visibility}" />

                <TextView
                    style="@style/errorField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@={viewModel.firstNameError.message}"
                    android:visibility="@{viewModel.firstNameError.visibility}" />

                <!--生年月日-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="10dp"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="@string/birthday" />


                    <!-- 身分証の確認状況を表示-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/unconfirmed_identification"
                        android:textColor="@color/coral"
                        android:textSize="12dp"
                        android:visibility="@{viewModel.unconfirmedExplainVisibility}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{viewModel.confirmingBirthDay}"
                        android:textColor="@color/coral"
                        android:textSize="12dp"
                        android:visibility="@{viewModel.confirmingVisibility}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/verified_1x"
                        android:text="@string/confirmed_identification"
                        android:textColor="@color/warmGrey"
                        android:textSize="12dp"
                        android:visibility="@{viewModel.confirmedVisibility}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{viewModel.deniedBirthDay}"
                        android:textColor="@color/coral"
                        android:textSize="12dp"
                        android:visibility="@{viewModel.deniedVisibility}" />

                    <TextView
                        style="@style/linkText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:textSize="12dp"
                        android:text="@string/change"
                        android:visibility="@{viewModel.changeVisibility}"
                        app:onSafeClick="@{handlers.onClickUpdateIdentityForChangeInfo}" />

                </LinearLayout>

                <EditText
                    style="@style/selectField"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:enabled="@{viewModel.inputIdentityInfoEnabled}"
                    android:focusable="false"
                    android:text="@={viewModel.dateOfBirth}"
                    app:onSafeClick="@{handlers::onClickBirthdayEditView}" />

                <TextView
                    style="@style/smallCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/registerBirthday_notice" />

                <!--性別-->
                <TextView
                    style="@style/fieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:drawableLeft="@drawable/icon_required_18"
                    android:drawablePadding="10dp"
                    android:text="性別" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <RadioGroup
                        android:id="@+id/GenderGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/male_button"
                            style="@style/buttonWithRadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:checked="@={viewModel.male}"
                            android:onClick="@{handlers::onClickMale}"
                            android:paddingLeft="10dp"
                            android:text="@string/male" />

                        <RadioButton
                            android:id="@+id/female_button"
                            style="@style/buttonWithRadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:checked="@={viewModel.female}"
                            android:onClick="@{handlers::onClickFemale}"
                            android:paddingLeft="5dp"
                            android:text="@string/female" />
                    </RadioGroup>
                </LinearLayout>

                <!-- 郵便番号 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/fieldLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/icon_required_18"
                    android:drawablePadding="10dp"
                    android:text="@string/postalCode" />

                <!-- 身分証の確認状況を表示-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/unconfirmed_identification"
                    android:textColor="@color/coral"
                    android:textSize="12dp"
                    android:visibility="@{viewModel.unconfirmedExplainVisibility}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{viewModel.confirmingCityName}"
                    android:textColor="@color/coral"
                    android:textSize="12dp"
                    android:visibility="@{viewModel.confirmingVisibility}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/verified_1x"
                    android:text="@string/confirmed_identification"
                    android:textColor="@color/warmGrey"
                    android:textSize="12dp"
                    android:visibility="@{viewModel.confirmedVisibility}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@{viewModel.deniedCityName}"
                    android:textColor="@color/coral"
                    android:textSize="12dp"
                    android:visibility="@{viewModel.deniedVisibility}" />

                <TextView
                    style="@style/linkText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:textSize="12dp"
                    android:text="@string/change"
                    android:visibility="@{viewModel.changeVisibility}"
                    app:onSafeClick="@{handlers.onClickUpdateIdentityForChangeInfo}" />

            </LinearLayout>

                <EditText
                    style="@style/textField"
                    android:layout_marginTop="10dp"
                    android:enabled="@{viewModel.inputIdentityInfoEnabled}"
                    android:hint="@string/register_postal_code_hint"
                    android:inputType="number"
                    android:text="@={viewModel.postalCode}" />

                <TextView
                    style="@style/smallCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/registerPhone_notice" />

                <TextView
                    style="@style/errorField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@={viewModel.postalCodeError.message}"
                    android:visibility="@{viewModel.postalCodeError.visibility}" />

                <!-- 都道府県 -->
                <TextView
                    style="@style/fieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:drawableLeft="@drawable/icon_required_18"
                    android:drawablePadding="10dp"
                    android:text="@string/prefecture" />

                <Spinner
                    android:id="@+id/registerAddress_prefecture"
                    style="@style/spinnerField"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:enabled="@{viewModel.inputIdentityInfoEnabled}"
                    android:entries="@array/prefecture_list"
                    android:selectedItemPosition="@={viewModel.prefectureId}"
                    android:spinnerMode="dialog" />

                <!-- ご住所 -->
                <TextView
                    style="@style/fieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:drawableLeft="@drawable/icon_required_18"
                    android:drawablePadding="10dp"
                    android:text="@string/city" />

                <EditText
                    style="@style/textField"
                    android:layout_marginTop="10dp"
                    android:enabled="@{viewModel.inputIdentityInfoEnabled}"
                    android:hint="@string/register_city_hint"
                    android:inputType="text"
                    android:text="@={viewModel.city}" />

                <TextView
                    style="@style/errorField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@={viewModel.cityError.message}"
                    android:visibility="@{viewModel.cityError.visibility}" />

                <!-- 番地以降 -->
                <TextView
                    style="@style/fieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:drawableLeft="@drawable/icon_required_18"
                    android:drawablePadding="10dp"
                    android:text="@string/street" />

                <EditText
                    android:id="@+id/registerAddress_street"
                    style="@style/textField"
                    android:layout_marginTop="10dp"
                    android:enabled="@{viewModel.inputIdentityInfoEnabled}"
                    android:hint="@string/register_street_hint"
                    android:inputType="text"
                    android:text="@={viewModel.street}" />

                <TextView
                    style="@style/errorField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@={viewModel.streetError.message}"
                    android:visibility="@{viewModel.streetError.visibility}" />


                <!--電話番号-->
                <TextView
                    style="@style/fieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:drawableLeft="@drawable/icon_required_18"
                    android:drawablePadding="10dp"
                    android:text="@string/phone" />

                <EditText
                    style="@style/textField"
                    android:layout_marginTop="10dp"
                    android:hint="@string/register_phone_hint"
                    android:inputType="number"
                    android:text="@={viewModel.phone}" />

                <TextView
                    style="@style/smallCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/registerPhone_notice" />

                <TextView
                    style="@style/errorField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@={viewModel.phoneError.message}"
                    android:visibility="@{viewModel.phoneError.visibility}" />

                <!--職業(セレクトボックス作成)-->
                <TextView
                    style="@style/fieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:drawableLeft="@drawable/icon_required_18"
                    android:drawablePadding="10dp"
                    android:text="職業" />

                <Spinner
                    android:id="@+id/job_status_list"
                    style="@style/spinnerField"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:entries="@array/job_status_list"
                    android:selectedItemPosition="@={viewModel.jobStatusId}"
                    android:spinnerMode="dialog" />


                <!--やってみたい仕事-->
                <TextView
                    style="@style/fieldLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:drawableLeft="@drawable/icon_required_18"
                    android:drawablePadding="10dp"
                    android:text="やってみたいお仕事" />

                <CheckBox
                    android:id="@+id/wishWork_smartPhone"
                    style="@style/buttonWithCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:checked="@={viewModel.interestedSmartPhone}"
                    android:paddingLeft="10dp"
                    android:text="@string/smartPhone" />

                <CheckBox
                    android:id="@+id/wishWork_cleaning"
                    style="@style/buttonWithCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:checked="@={viewModel.interestedCleaning}"
                    android:paddingLeft="10dp"
                    android:text="@string/cleaning" />

                <CheckBox
                    android:id="@+id/wishWork_walk"
                    style="@style/buttonWithCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:checked="@={viewModel.interestedWalk}"
                    android:paddingLeft="10dp"
                    android:text="@string/walk" />

                <CheckBox
                    android:id="@+id/wishWork_bicycle"
                    style="@style/buttonWithCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:checked="@={viewModel.interestedBicycle}"
                    android:paddingLeft="10dp"
                    android:text="@string/bicycle" />

                <CheckBox
                    android:id="@+id/wishWork_car"
                    style="@style/buttonWithCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:checked="@={viewModel.interestedCar}"
                    android:paddingLeft="10dp"
                    android:text="@string/car" />

                <Button
                    android:id="@+id/change_button"
                    style="@style/primaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="40dp"
                    android:enabled="@{viewModel.isChangeButtonEnabled}"
                    android:text="@string/registration"
                    app:onSafeClick="@{handlers::onClickRegister}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
