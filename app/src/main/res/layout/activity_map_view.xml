<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <data>
        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.activities.job.MapViewViewModel"/>
        <variable
            name="handlers"
            type="jp.co.recruit.erikura.presenters.activities.job.MapViewEventHandlers" />
    </data>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 地図画面のフレーム -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fragment
                android:id="@+id/jobs_map_view_map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".presenters.activities.job.MapViewActivity" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 検索エリアのフレーム -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 検索条件ボタン -->
            <ImageButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="#00000000"
                android:src="@drawable/search_button_2x"
                android:scaleType="fitCenter"
                android:padding="0dp"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:elevation="14dp"
                />
            <!-- 募集中のみチェックボックス -->
            <ImageButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="#00000000"
                android:src="@drawable/before_open_2x"
                android:scaleType="fitCenter"
                android:padding="0dp"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="136dp"
                android:layout_marginLeft="20dp"
                />
            <!-- この範囲で再検索ボタン -->
            <Button
                android:layout_width="160dp"
                android:layout_height="44dp"
                style="@style/tertiaryButton"
                android:text="この範囲で再検索"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintLeft_toLeftOf="parent"
                map:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="60dp"
                />
            <!-- リストボタン -->
            <ImageButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="#00000000"
                android:src="@drawable/list_2x"
                android:scaleType="fitCenter"
                android:padding="0dp"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="60dp"
                android:layout_marginRight="20dp"
                android:elevation="4dp"
                />
            <!-- 現在地ボタン -->
            <ImageButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="#00000000"
                android:src="@drawable/location_2x"
                android:scaleType="fitCenter"
                android:padding="0dp"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="136dp"
                android:layout_marginRight="20dp"
                android:elevation="4dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/map_view_carousel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                map:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:clipToPadding="false"
                map:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
