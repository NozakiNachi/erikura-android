<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel"
            type="jp.co.recruit.erikura.presenters.view_models.MarkerViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/marker_body"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            android:background="@{viewModel.bodyBackground}"
            android:padding="1dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:bitmap="@{viewModel.icon}" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.fee}"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/hirakakupron_w2_alphanum_01"
                android:textSize="16dp"
                android:textColor="@{viewModel.color}"
                android:firstBaselineToTopHeight="0dp"
                android:lastBaselineToBottomHeight="0dp"
                android:includeFontPadding="false"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/marker_triangle"
            android:layout_width="8dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toTopOf="@id/marker_body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="31dp"
            android:background="@{viewModel.triangleBackground}"
            />
        <TextView
            android:id="@+id/marker_boosted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@id/marker_body"
            android:text="報酬UP"
            android:fontFamily="@font/hirakakupron_w6_alphanbum_01"
            android:textSize="10dp"
            android:firstBaselineToTopHeight="0dp"
            android:lastBaselineToBottomHeight="0dp"
            android:textColor="@color/coral"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/background_roundrect_coral"
            android:visibility="@{viewModel.boostVisibility}"
            />
        <TextView
            android:id="@+id/marker_wanted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@id/marker_body"
            android:text="急募"
            android:fontFamily="@font/hirakakupron_w6_alphanbum_01"
            android:textSize="10dp"
            android:firstBaselineToTopHeight="0dp"
            android:lastBaselineToBottomHeight="0dp"
            android:textColor="@color/orangeYellow"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/background_roundrect_orange_yellow"
            android:visibility="@{viewModel.wantedVisibility}"
            />
        <TextView
            android:id="@+id/marker_soon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@id/marker_body"
            android:text="もうすぐ開始"
            android:fontFamily="@font/hirakakupron_w6_alphanbum_01"
            android:textSize="10dp"
            android:firstBaselineToTopHeight="0dp"
            android:lastBaselineToBottomHeight="0dp"
            android:textColor="@color/waterBlue"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/background_roundrect_water_blue"
            android:visibility="@{viewModel.soonVisibility}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>