<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="view_model"
            type="jp.co.recruit.erikura.presenters.activities.RegisterEmailViewModel" />
        <variable
            name="handlers"
            type="jp.co.recruit.erikura.presenters.activities.SendEmailEventHandlers" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presenters.activities.RegisterEmailActivity">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/paleGrey"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    style="@style/titleLabel"
                    android:text="@string/registerEmail_caption" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/fieldLabel"
                    android:layout_marginTop="40dp"
                    android:text="@string/email" />

                <EditText
                    android:id="@+id/registerEmail_editText"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    style="@style/textField"
                    android:layout_marginTop="10dp"
                    android:inputType="textEmailAddress"
                    android:text="@={view_model.email}"
                    android:hint="@string/register_email_hint" />

                <TextView
                    android:id="@+id/registerEmail_errorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14dp"
                    android:lineSpacingExtra="10dp"
                    android:textColor="@color/colorAccent"
                    android:background="#fff1f1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="12dp"
                    android:lineSpacingExtra="10dp"
                    android:textColor="@color/blackTwo"
                    android:text="@string/registerEmail_accept"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/blackTwo"
                    android:textColorLink="@color/topaz"
                    android:text="@string/registerEmail_agree"
                    />

                <Button
                    android:id="@+id/registerEmail_button"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    style="@style/primaryButton"
                    android:text="@string/send_email"
                    android:onClick="@{handlers.onClickSendEmail}"
                    />


            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>