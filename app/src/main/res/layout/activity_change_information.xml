<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.activities.ChangeInformationViewModel" />
        <variable
            name="handlers"
            type="jp.co.recruit.erikura.presenters.activities.ChangeInformationEventHandlers" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/white"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        style="@style/label_w2"
                        android:textSize="22dp"
                        android:textColor="@color/black"
                        android:text="会員情報変更" />
                </LinearLayout>


                <!--ログインID(登録メールアドレスを表示する。)-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    >
                    <TextView
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="ログインID(メールアドレス)" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <!--FIXME: 登録しているメールアドレスを表示-->
                    <TextView
                        android:id="@+id/register_mail_address"
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FIXME: 登録しているメールアドレスを表示" />
                </LinearLayout>

                <!--パスワード-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    >
                    <TextView
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="パスワード" />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    style="@style/passwordField"
                    android:layout_marginLeft="20dp"
                    android:hint="@string/register_password_hint" />
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="20dp"
                    android:text="※パスワードを変更する場合は入力してください"
                    android:textColor="@color/blackTwo"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="※6文字以上の半角英数で入力してください。"
                    android:textColor="@color/blackTwo"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/errorField"
                    />

                <!--パスワード確認-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="パスワード確認" />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    style="@style/passwordField"
                    android:layout_marginLeft="20dp"
                    android:hint="@string/register_password_hint" />
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="※パスワードを変更する場合は入力してください。"
                    android:textColor="@color/blackTwo"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/errorField"
                    />

                <!--氏名-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="氏名 （姓・名）" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="71dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <EditText
                            style="@style/textField"
                            android:layout_width="match_parent"
                            android:layout_height="62dp"
                            android:hint="@string/register_last_name_hint"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="72dp"
                        android:layout_weight="1">
                        <EditText
                            style="@style/textField"
                            android:layout_height="62dp"
                            android:hint="@string/register_first_name_hint"
                            />
                    </LinearLayout>
                </LinearLayout>


                <!--生年月日-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    >
                    <TextView
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="@string/birthday" />
                </LinearLayout>
                <EditText
                    style="@style/selectField"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/smallCaption"
                    android:text="@string/registerBirthday_notice"
                    />

                <!--性別-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    >
                    <TextView
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="性別" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <RadioGroup
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/GenderGroup">
                            <RadioButton
                                android:id="@+id/male_button"
                                android:layout_width="140dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                style="@style/buttonWithCheckBox"
                                android:text="@string/male"
                                >
                            </RadioButton>
                            <RadioButton
                                android:id="@+id/female_button"
                                android:layout_width="140dp"
                                android:layout_height="70dp"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                style="@style/buttonWithCheckBox"
                                android:text="@string/female"
                                >
                            </RadioButton>
                    </RadioGroup>
                </LinearLayout>

                <!-- 郵便番号 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="@string/postalCode" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        style="@style/textField"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:hint="@string/register_postal_code_hint"
                        android:inputType="number"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/smallCaption"
                    android:layout_marginTop="10dp"
                    android:text="@string/registerPhone_notice"
                    />
                <TextView
                    style="@style/errorField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    />

                <!-- 都道府県 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="@string/prefecture" />
                </LinearLayout>
                <Spinner
                    android:id="@+id/registerAddress_prefecture"
                    style="@style/spinnerField"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:entries="@array/prefecture_list"
                    android:spinnerMode="dialog"
                    />

                <!-- ご住所 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="@string/city" />
                </LinearLayout>
                <EditText
                    style="@style/textField"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/register_city_hint"
                    />
                <TextView
                    style="@style/errorField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    />

                <!-- 番地以降 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="@string/street" />
                </LinearLayout>

                <EditText
                    android:id="@+id/registerAddress_street"
                    style="@style/textField"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/register_street_hint"
                    />
                <TextView
                    style="@style/errorField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    />


                <!--電話番号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/fieldLabel"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="@string/phone" />
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    style="@style/textField"
                    android:layout_marginTop="10dp"
                    android:hint="@string/register_phone_hint"
                    android:inputType="number"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/smallCaption"
                    android:text="@string/registerPhone_notice"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/errorField"
                    />

                <!--職業(セレクトボックス作成)-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        style="@style/fieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="職業" />
                </LinearLayout>
                <Spinner
                    android:id="@+id/job"
                    style="@style/spinnerField"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:entries="@array/job_status_list"
                    android:spinnerMode="dialog"
                    />


                <!--やってみたい仕事-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/fieldLabel"
                        android:drawableLeft="@drawable/icon_required_18"
                        android:drawablePadding="10dp"
                        android:text="やってみたい仕事" />
                </LinearLayout>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    style="@style/buttonWithCheckBox"
                    android:text="@string/smartPhone"
                    android:checked="@={viewModel.interestedSmartPhone}"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    style="@style/buttonWithCheckBox"
                    android:text="@string/cleaning"
                    android:checked="@={viewModel.interestedCleaning}"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    style="@style/buttonWithCheckBox"
                    android:text="@string/walk"
                    android:checked="@={viewModel.interestedWalk}"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    style="@style/buttonWithCheckBox"
                    android:text="@string/bicycle"
                    android:checked="@={viewModel.interestedBicycle}"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    style="@style/buttonWithCheckBox"
                    android:text="@string/car"
                    android:checked="@={viewModel.interestedCar}"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="40dp"
                    style="@style/primaryButton"
                    android:text="@string/registration"
                    android:onClick="@{handlers::onClickRegister}"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
