<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presenters.activities.report.ReportEvaluationActivity">
    <data>
        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.activities.report.ReportEvaluationViewModel" />
        <variable
            name="handlers"
            type="jp.co.recruit.erikura.presenters.activities.report.ReportEvaluationEventHandler" />
    </data>
    <FrameLayout
        android:id="@+id/report_evaluation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/paleGrey"
                    android:orientation="vertical">

                    <!-- 進行度表示 -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="106dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:background="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal">

                            <!--                            <Button-->
                            <!--                                android:layout_width="30dp"-->
                            <!--                                android:layout_height="30dp"-->
                            <!--                                android:background="@drawable/background_progress_circle"-->
                            <!--                                android:text="1" />-->

                            <Button
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:background="@drawable/background_progress_circle" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right">

                                <!--                                <Button-->
                                <!--                                    android:layout_width="30dp"-->
                                <!--                                    android:layout_height="30dp"-->
                                <!--                                    android:background="@drawable/background_progress_circle"-->
                                <!--                                    android:text="2" />-->

                                <Button
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/background_progress_circle" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right">

                                <Button
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/background_progress_circle"
                                    android:text="3" />

                                <!--                                <Button-->
                                <!--                                    android:layout_width="14dp"-->
                                <!--                                    android:layout_height="14dp"-->
                                <!--                                    android:layout_gravity="center"-->
                                <!--                                    android:background="@drawable/background_progress_circle" />-->

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right">

                                <!--                                <Button-->
                                <!--                                    android:layout_width="30dp"-->
                                <!--                                    android:layout_height="30dp"-->
                                <!--                                    android:background="@drawable/background_progress_circle"-->
                                <!--                                    android:text="4" />-->

                                <Button
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/background_progress_circle" />

                            </LinearLayout>

                        </LinearLayout>
                    </FrameLayout>

                    <!-- ラベル -->
                    <TextView
                        style="@style/titleLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/report_evaluation_caption" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:text="@string/report_evaluation_note"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/smallCaption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/report_evaluation_memo"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- 白い三角 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/background_triangle" />

                <!-- 評価ボタン -->
                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <ToggleButton
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:checked="@={viewModel.good}"
                        android:onClick="@{handlers::onClickGood}"
                        android:stateListAnimator="@drawable/button_state_list_anim_material_8dp"
                        style="@style/goodButton"/>
                    <ToggleButton
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:checked="@={viewModel.bad}"
                        android:onClick="@{handlers::onClickBad}"
                        android:stateListAnimator="@drawable/button_state_list_anim_material_8dp"
                        style="@style/badButton"/>
                </LinearLayout>

                <!-- コメント記入 -->
                <TextView
                    style="@style/fieldLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/comment" />

                <EditText
                    style="@style/textField"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:paddingTop="24dp"
                    android:text="@={viewModel.comment}" />

                <TextView
                    style="@style/errorField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@={viewModel.commentError.message}"
                    android:visibility="@{viewModel.commentError.visibility}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp" />
            </LinearLayout>

        </ScrollView>

        <!-- 次へボタン -->
        <Button
            style="@style/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:layout_marginRight="0dp"
            app:onSafeClick="@{handlers::onClickNext}" />

        <!-- マニュアルボタン -->
        <Button
            style="@style/secondaryButton"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="30dp"
            app:onSafeClick="@{handlers::onClickManual}"
            android:text="@string/manual"
            android:textSize="14dp" />

    </FrameLayout>
</layout>