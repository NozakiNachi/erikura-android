<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <data>
        <variable
            name="handlers"
            type="jp.co.recruit.erikura.presenters.activities.StartEventHandlers" />
        <variable
            name="viewModel"
            type="jp.co.recruit.erikura.presenters.activities.StartActivity.StartViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <ImageView
                android:layout_width="187dp"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                app:layout_marginTop="@{viewModel.logoTopMargin}"
                app:srcCompat="@drawable/splash" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginTop="@{viewModel.logoBottomMargin}"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="#ffa300">
                <TextureView
                    android:id="@+id/start_texture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:onClick="@{handlers::onClickVideo}"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/silver"
                android:orientation="vertical">

                <Button
                    android:id="@+id/registerButton"
                    style="@style/primaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/registerFree"
                    android:onClick="@{handlers::onClickRegisterButton}"/>

                <Button
                    android:id="@+id/loginButton"
                    style="@style/secondaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/login"
                    android:onClick="@{handlers::onClickLoginButton}"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="60dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:text="@string/start_startWithoutLogin"
                    style="@style/linkText"
                    android:textStyle="bold"
                    android:onClick="@{handlers::onClickStartWithoutLogin}"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>

