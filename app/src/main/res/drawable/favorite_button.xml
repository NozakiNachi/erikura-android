<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_checked="true">
    <layer-list>
        <item android:top="0dp"
            android:right="0dp"
            android:left="0dp"
            android:bottom="0dp">
            <bitmap android:src="@drawable/favorite_on_2x" />
        </item>
    </layer-list>
</item>
<item android:state_checked="false">
    <layer-list>
        <item android:top="0dp"
            android:right="0dp"
            android:left="0dp"
            android:bottom="0dp">
            <bitmap android:src="@drawable/favorite_off_2x" />
        </item>
    </layer-list>
</item>
</selector>