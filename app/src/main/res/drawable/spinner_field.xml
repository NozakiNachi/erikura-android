<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Active -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <solid android:color="@color/white" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/topaz" />
                </shape>
            </item>
            <!-- 三角画像 -->
            <item
                android:top="22dp"
                android:bottom="22dp"
                android:right="22dp">
                <bitmap
                    android:gravity="right"
                    android:src="@drawable/arrow_under" >
                </bitmap>
            </item>
        </layer-list>
    </item>
    <!-- 有効な場合 -->
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <solid android:color="@color/white" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/warmGrey" />
                </shape>
            </item>
            <!-- 三角画像 -->
            <item
                android:top="22dp"
                android:bottom="22dp"
                android:right="22dp">
                <bitmap
                    android:gravity="right"
                    android:src="@drawable/arrow_under" >
                </bitmap>
            </item>
        </layer-list>
    </item>
</selector>