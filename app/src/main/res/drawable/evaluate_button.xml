<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Active -->
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white" />
                    <stroke android:width="1dp"
                        android:color="@color/topaz"/>
                </shape>
            </item>
            <item android:top="44dp"
                android:right="44dp"
                android:left="44dp"
                android:bottom="44dp">
                <bitmap android:src="@drawable/good_active_2x" />
            </item>
        </layer-list>
    </item>

    <!-- Disabled -->
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white" />
                    <stroke android:width="1dp"
                        android:color="@color/coral"/>
                </shape>
            </item>
            <item android:top="44dp"
                android:right="44dp"
                android:left="44dp"
                android:bottom="44dp">
                <bitmap android:src="@drawable/bad_active_2x" />
            </item>
        </layer-list>
    </item>

</selector>